{% extends 'base.html.twig' %}

{% block title %}Item index
{% endblock %}

{% block body %}
	<h1>Item index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Title</th>
				<th>Synopsis</th>
				<th>Chapters</th>
				<th>Volumes_or_episodes</th>
				<th>Start_date</th>
				<th>End_date</th>
				<th>Image_url</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for item in items %}
				<tr>
					<td>{{ item.id }}</td>
					<td>{{ item.title }}</td>
					<td>{{ item.synopsis }}</td>
					<td>{{ item.chapters }}</td>
					<td>{{ item.volumesOrEpisodes }}</td>
					<td>{{ item.startDate ? item.startDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ item.endDate ? item.endDate|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ item.imageUrl }}</td>
					<td>
						<a href="{{ path('item_show', {'item': item.id}) }}">show</a>
						<a href="{{ path('item_edit', {'id': item.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="9">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('item_new') }}">Create new</a>
{% endblock %}
