{% extends 'base.html.twig' %}

{% block title %}Item
{% endblock %}

{% block body %}
	<container>
		<div class="row mt-4">
			<h1>{{ item.title }}</h1>
		</div>

		<hr>

		<div class="row mt-4 mb-4">
			<div class="col-3">
				<img src="{{ item.imageUrl }}" class="img-fluid rounded-start rounded" alt="image of {{ item.title }}">
			</div>
			<div class="col">
				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ item.id }}</td>
						</tr>
						<tr>
							<th>Title</th>
							<td>{{ item.title }}</td>
						</tr>
						<tr>
							<th>Synopsis</th>
							<td>{{ item.synopsis }}</td>
						</tr>
						<tr>
							<th>Chapters</th>
							<td>{{ item.chapters }}</td>
						</tr>
						<tr>
							<th>Volumes_or_episodes</th>
							<td>{{ item.volumesOrEpisodes }}</td>
						</tr>
						<tr>
							<th>Start_date</th>
							<td>{{ item.startDate ? item.startDate|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
						<tr>
							<th>End_date</th>
							<td>{{ item.endDate ? item.endDate|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>

		<hr>

		<div class="row mt-4 mb-4">
			<div class="col text-start">
				{{ include('item/_delete_form.html.twig') }}
			</div>
			<div class="col text-end">
				<button class="btn btn-secondary">
					<a href="{{ path('collecting_show', {'collecting': collecting.id}) }}" class="text-decoration-none text-white">Back to list</a>
				</button>
				<button class="btn btn-primary">
					<a href="{{ path('collecting_update_item', {'collecting': collecting.id, 'item': item.id}) }}" class="text-decoration-none text-white">Update</a>
				</button>
			</div>
		</div>
	</container>
{% endblock %}
